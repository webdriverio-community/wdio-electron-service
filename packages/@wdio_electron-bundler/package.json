{
  "name": "@wdio/electron-bundler",
  "version": "9.0.0-next.3",
  "description": "Types for WebdriverIO Electron Service",
  "homepage": "https://github.com/webdriverio-community/wdio-electron-service",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "wdio-bundler": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    }
  },
  "scripts": {
    "clean": "pnpm clean:dist && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml",
    "clean:dist": "pnpm dlx shx rm -rf ./dist",
    "dev": "pnpm run build --watch",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "build:debug": "cross-env DEBUG=@wdio/electron-bundler pnpm build",
    "test:unit": "vitest --coverage --watch=false test/unit/",
    "test:integration": "vitest --watch=false test/integration/",
    "test:dev": "vitest --coverage",
    "test": "pnpm test:unit && pnpm test:integration"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "commander": "^14.0.0",
    "debug": "^4.4.1",
    "read-package-up": "^11.0.0",
    "rollup": "^4.46.2",
    "rollup-plugin-node-externals": "^8.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "shx": "^0.4.0",
    "vitest": "^3.2.4"
  },
  "files": ["dist/*"]
}
