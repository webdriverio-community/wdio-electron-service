{
  "name": "@wdio/electron-utils",
  "version": "7.2.0",
  "description": "Utilities for WebdriverIO Electron Service",
  "homepage": "https://github.com/webdriverio-community/wdio-electron-service",
  "license": "MIT",
  "module": "dist/index.js",
  "main": "dist/cjs/index.js",
  "type": "module",
  "exports": {
    ".": [
      {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "require": "./dist/cjs/index.js"
      },
      "./dist/cjs/index.js"
    ],
    "./log": [
      {
        "import": "./dist/log.js",
        "types": "./dist/log.d.ts",
        "require": "./dist/cjs/log.js"
      },
      "./dist/cjs/log.js"
    ]
  },
  "engines": {
    "node": ">=18 || >=20"
  },
  "scripts": {
    "clean": "pnpm clean:dist && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml ./src/cjs/*.ts",
    "clean:dist": "pnpm dlx shx rm -rf ./dist",
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc --outDir dist",
    "build:cjs": "tsc --build tsconfig.cjs.json",
    "release": "release-it -VV --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "test:unit": "vitest --coverage --watch=false",
    "test:dev": "vitest --coverage",
    "test": "pnpm test:unit"
  },
  "dependencies": {
    "@electron/packager": "^18.3.5",
    "@wdio/logger": "^9.1.3",
    "debug": "^4.3.7",
    "find-versions": "^6.0.0",
    "read-package-up": "^11.0.0"
  },
  "peerDependencies": {
    "app-builder-lib": ">=25.0.6"
  },
  "peerDependenciesMeta": {
    "app-builder-lib": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.8.7",
    "@vitest/coverage-v8": "^2.1.4",
    "@wdio/electron-types": "workspace:*",
    "app-builder-lib": "^25.1.8",
    "release-it": "^17.10.0",
    "shx": "^0.3.4",
    "toml": "^3.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm pack"
    },
    "git": false,
    "npm": {
      "publish": true,
      "publishPath": "*.tgz"
    }
  }
}
