{
  "name": "forge-app-example",
  "version": "0.0.0",
  "description": "Electron Forge app example using wdio-electron-service",
  "main": "dist/main/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "pnpx shx rm -rf dist dist-electron node_modules",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-forge package",
    "preview": "electron-vite preview",
    "start": "electron .",
    "test": "cross-env DEBUG=wdio-electron-service wdio run wdio.conf.ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@types/node": "^24.3.0",
    "@wdio/cli": "^9.19.2",
    "@wdio/electron-types": "9.1.1",
    "@wdio/electron-utils": "9.1.1",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "cross-env": "^10.0.0",
    "electron": "37.6.1",
    "electron-vite": "^4.0.0",
    "typescript": "^5.9.3",
    "wdio-electron-service": "link:packages/wdio-electron-service"
  },
  "keywords": ["electron", "forge", "electron-vite", "webdriverio", "testing", "example"],
  "author": "WebDriverIO Community",
  "license": "MIT",
  "config": {
    "forge": {
      "outDir": "dist-electron",
      "packagerConfig": {
        "name": "Forge App Example",
        "executableName": "forge-app-example",
        "osxSign": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "forge_app_example"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "electron-winstaller"]
  }
}
