{
  "name": "builder-app-example",
  "version": "1.0.0",
  "description": "Electron Builder app example using wdio-electron-service",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "clean": "pnpx shx rm -rf dist dist-electron node_modules",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "start": "electron .",
    "test": "wdio run wdio.conf.ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@wdio/cli": "^9.16.2",
    "@wdio/globals": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "beta",
    "typescript": "^5.8.3",
    "wdio-electron-service": "latest"
  },
  "keywords": [
    "electron",
    "builder",
    "electron-vite",
    "webdriverio",
    "testing",
    "example"
  ],
  "author": "WebDriverIO Community",
  "license": "MIT",
  "build": {
    "appId": "com.example.builder-app",
    "productName": "Builder App Example",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
