{
  "name": "@repo/e2e",
  "description": "WebdriverIO Electron Service E2E Test Suite",
  "type": "module",
  "private": "true",
  "scripts": {
    "ci": "pnpm i && pnpm test",
    "clean": "pnpm dlx shx rm -rf ./test/js ./node_modules pnpm-lock.yaml ./logs && tsx ../scripts/clean-test-apps.ts",
    "clean:temp-dirs": "tsx ../scripts/clean-temp-dirs.ts",
    "clean:logs": "pnpm dlx shx rm -rf ./logs && pnpm dlx shx mkdir -p ./logs",
    "cat-logs": "pnpm dlx shx cat ./logs/*/*.log",
    "prepare-apps": "tsx ./scripts/prepare-apps.ts",
    "check-temp-dir": "tsx ./scripts/check-temp-dir.ts",
    "prepare-and-check": "tsx ./scripts/prepare-and-check.ts",
    "test": "pnpm run test:matrix",
    "test:matrix": "tsx ./scripts/run-test-matrix.ts",
    "test:single": "tsx ./scripts/run-single-test.ts",
    "test:all": "tsx ./scripts/run-all-tests.ts",
    "test:forge:cjs": "cross-env PLATFORM=forge MODULE_TYPE=cjs pnpm run test:matrix",
    "test:forge:esm": "cross-env PLATFORM=forge MODULE_TYPE=esm pnpm run test:matrix",
    "test:builder:cjs": "cross-env PLATFORM=builder MODULE_TYPE=cjs pnpm run test:matrix",
    "test:builder:esm": "cross-env PLATFORM=builder MODULE_TYPE=esm pnpm run test:matrix",
    "test:no-binary:cjs": "cross-env PLATFORM=no-binary MODULE_TYPE=cjs pnpm run test:matrix",
    "test:no-binary:esm": "cross-env PLATFORM=no-binary MODULE_TYPE=esm pnpm run test:matrix",
    "test:standalone": "cross-env TEST_TYPE=standalone pnpm run test:matrix",
    "test:mac-universal": "cross-env MAC_UNIVERSAL=true pnpm run test:all",
    "test:mac-universal:matrix": "cross-env MAC_UNIVERSAL=true pnpm run test:matrix",
    "logs": "tail -f ./logs/**/*.log | grep -v '\\[\\$0\\]'"
  },
  "dependencies": {
    "@wdio/cli": "^9.12.1",
    "@wdio/electron-utils": "workspace:*",
    "@wdio/globals": "^9.12.1",
    "@wdio/local-runner": "^9.12.1",
    "@wdio/mocha-framework": "^9.12.1",
    "electron": "^35.0.3",
    "tsx": "^4.19.3",
    "wdio-electron-service": "workspace:*",
    "webdriverio": "^9.12.1",
    "xvfb-maybe": "^0.2.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.11",
    "@vitest/spy": "^3.0.9",
    "@wdio/cli": "^9.8.0",
    "@wdio/electron-types": "workspace:*",
    "@wdio/electron-utils": "workspace:*",
    "@wdio/globals": "^9.8.0",
    "@wdio/local-runner": "^9.8.0",
    "@wdio/mocha-framework": "^9.7.3",
    "@wdio/spec-reporter": "^9.11.0",
    "@wdio/types": "^9.9.0",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "p-limit": "^6.2.0",
    "read-package-up": "^11.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "wdio-electron-service": "workspace:*",
    "webdriverio": "^9.8.0",
    "xvfb-maybe": "^0.2.1"
  }
}
