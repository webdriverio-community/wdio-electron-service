{
  "name": "wdio-electron-service-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18 || >=20"
  },
  "scripts": {
    "build": "nx run build --scope wdio-electron-service",
    "ci": "pnpm i && nx run-many -t build test:unit test:e2e lint format:check",
    "ci:linux": "pnpm i && nx run-many -t build test:unit test:e2e:ci-linux lint format:check",
    "ci:e2e-mac-universal": "nx run-many -t clean:dist -p example\\* && nx run-many -t \"test:e2e:mac-universal\" -p example\\*",
    "clean": "nx run-many -t clean:package -p example-forge\\* && nx run-many -t clean && rm -rf node_modules || shx rm -rf node_modules",
    "dev": "lerna watch wdio-electron-service#build",
    "format": "prettier --write \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "format:check": "prettier --check \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "graph": "pnpm test:e2e:graph && pnpm test:e2e-mac-universal:graph",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{j,mj,cj,t}s\"",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{j,mj,cj,t}s\" --fix",
    "prepare": "husky",
    "release": "nx run release",
    "test": "nx run-many -t test test:e2e",
    "test:dev": "nx run test:dev",
    "test:e2e-local": "pnpm dlx cross-env pnpm clean && pnpm i && lerna run test:e2e",
    "test:e2e-mac-universal-local": "pnpm dlx cross-env pnpm clean && pnpm i && nx run-many -t \"test:e2e:mac-universal\" -p example\\*",
    "test:e2e-mac-universal:graph": "nx run example*:\"test:e2e:mac-universal\" --graph=./.github/assets/e2e-graph-mac-universal.png",
    "test:e2e:graph": "nx run build test:e2e --graph=./.github/assets/e2e-graph.png",
    "update:all": "pnpm up -iLr"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/eslint-config-prettier": "^6.11.2",
    "@types/node": "^20.14.11",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vitest": "^0.5.3",
    "eslint-plugin-wdio": "^8.20.0",
    "globals": "^15.8.0",
    "husky": "^9.1.0",
    "jsdom": "^24.0.0",
    "lerna": "^8.1.6",
    "lint-staged": "^15.0.2",
    "nx": "^19.5.0",
    "prettier": "^3.3.3",
    "read-package-up": "^11.0.0",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.5.0+sha256.dbdf5961c32909fb030595a9daa1dae720162e658609a8f92f2fa99835510ca5",
  "nx": {}
}
