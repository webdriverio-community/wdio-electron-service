{
  "name": "wdio-electron-service-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18 || >=20"
  },
  "scripts": {
    "build": "turbo run build --filter=@wdio* --filter=wdio-electron-service --only --force",
    "build:e2e": "turbo run build --filter=@repo/e2e --filter=example-* --only",
    "build:test-apps": "tsx ./scripts/prebuild-test-apps.ts",
    "backport": "tsx ./scripts/backport.ts",
    "ci": "turbo run lint format:check test:unit @repo/e2e#test:all",
    "ci-linux": "cross-env CI=true turbo run lint format:check test:unit @repo/e2e#test:all --concurrency=1",
    "ci:quick": "turbo run lint format:check test:unit",
    "ci:e2e:clean": "turbo run clean --filter=example*",
    "clean": "turbo run clean && rm -rf node_modules .turbo || shx rm -rf node_modules .turbo",
    "clean:temp-dirs": "tsx ./scripts/clean-temp-dirs.ts",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "format:check": "prettier --check \"**/*.{j,t}s\" \"**/*.{yml,md,json}\"",
    "graph": "pnpm graph:e2e && pnpm graph:e2e:mac-universal",
    "graph:e2e": "tsx ./scripts/create-task-graph.ts ./.github/assets/e2e-graph.png @repo/e2e#test:forge:cjs @repo/e2e#test:forge:esm @repo/e2e#test:builder:cjs @repo/e2e#test:builder:esm @repo/e2e#test:no-binary:cjs @repo/e2e#test:no-binary:esm",
    "graph:e2e:mac-universal": "tsx ./scripts/create-task-graph.ts ./.github/assets/e2e-graph-mac-universal.png @repo/e2e#test:forge:cjs @repo/e2e#test:forge:esm @repo/e2e#test:builder:cjs @repo/e2e#test:builder:esm",
    "lint": "cross-env eslint \"**/*.{j,mj,cj,t}s\"",
    "lint:fix": "cross-env eslint \"**/*.{j,mj,cj,t}s\" --fix",
    "prepare": "husky",
    "release": "turbo run release --filter=wdio-electron-service --filter=@wdio* --only --concurrency=1",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test:unit @repo/e2e#test:all",
    "test:unit": "turbo run test:unit",
    "test:e2e-local": "pnpm dlx cross-env DEBUG=wdio-electron-service pnpm clean && pnpm i && pnpm build && cd e2e && pnpm run test:all",
    "test:e2e-local:standalone": "pnpm dlx cross-env DEBUG=wdio-electron-service pnpm clean && pnpm i && pnpm build && pnpm build:test-apps && cd e2e && pnpm run test:standalone",
    "test:e2e-mac-universal-local": "pnpm dlx cross-env DEBUG=wdio-electron-service TEST=true pnpm clean && pnpm i && pnpm build && cd e2e && pnpm run test:all",
    "update:all": "pnpm up -iLr"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@inquirer/prompts": "^7.4.0",
    "@octokit/rest": "^21.1.1",
    "@octokit/types": "^13.10.0",
    "@turbo-version/version": "^0.8.3",
    "@types/eslint-config-prettier": "^6.11.2",
    "@types/node": "^22.13.11",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/eslint-plugin": "^1.1.38",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.2",
    "eslint-plugin-import-x": "^4.9.1",
    "eslint-plugin-wdio": "^9.9.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "read-package-up": "^11.0.0",
    "rollup": "^4.37.0",
    "shelljs": "^0.9.2",
    "shx": "^0.4.0",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "edgedriver",
      "electron",
      "esbuild",
      "geckodriver"
    ]
  },
  "packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d"
}
