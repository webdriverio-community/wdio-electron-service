{
  "name": "example-forge-esm",
  "version": "1.0.0",
  "main": "dist/main.bundle.js",
  "module": "dist/main.bundle.js",
  "type": "module",
  "scripts": {
    "build": "pnpm build:bundle && pnpm build:package",
    "build:bundle": "tsc && rollup -c rollup.config.js",
    "build:package": "cp ./src/index.html ./dist && electron-forge package",
    "build:package:mac-universal": "cp ./src/index.html ./dist && electron-forge package --platform=darwin --arch=universal",
    "build:mac-universal": "pnpm build:bundle && pnpm build:package:mac-universal",
    "clean": "pnpm clean:dist && pnpm dlx shx rm -rf ./node_modules ./package-lock.json ./wdio-logs ./out",
    "clean:dist": "pnpm dlx shx rm -rf ./dist ./out && pnpm dlx shx mkdir -p ./dist",
    "clean:package": "pnpm pkg delete dependencies",
    "init": "tsx ../../scripts/init-forge-example.ts forge-esm",
    "test:e2e": "cross-env EXAMPLE_DIR=forge-esm lerna run exec --filter=@repo/e2e",
    "test:e2e:ci-linux": "cross-env EXAMPLE_DIR=forge-esm lerna run exec:ci-linux --filter=@repo/e2e",
    "test:e2e:mac-universal": "cross-env EXAMPLE_DIR=forge-esm lerna run exec --filter=@repo/e2e"
  },
  "dependencies": {
    "wdio-electron-service": "workspace:*"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/node": "^20.14.11",
    "@wdio/cli": "9.0.0-alpha.367",
    "@wdio/globals": "9.0.0-alpha.367",
    "@wdio/local-runner": "9.0.0-alpha.367",
    "@wdio/mocha-framework": "9.0.0-alpha.367",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "global-jsdom": "^24.0.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.18.1",
    "ts-loader": "^9.4.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "webdriverio": "9.0.0-alpha.367"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  }
}
