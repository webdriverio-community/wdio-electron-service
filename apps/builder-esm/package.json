{
  "name": "example-builder-esm",
  "version": "1.0.0",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "pnpm build:bundle && pnpm build:package",
    "build:bundle": "tsc --outDir dist",
    "build:package": "cp ./src/index.html ./dist && electron-builder -p never",
    "build:package:mac-universal": "cp ./src/index.html ./dist && electron-builder -p never -m --universal",
    "build:mac-universal": "pnpm build:bundle && pnpm build:package:mac-universal",
    "clean": "pnpm clean:dist && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml ./wdio-logs",
    "clean:dist": "pnpm dlx shx rm -rf ./dist && pnpm dlx shx mkdir -p ./dist",
    "test:e2e": "cross-env EXAMPLE_DIR=builder-esm lerna run exec --scope @repo/e2e",
    "test:e2e:ci-linux": "cross-env EXAMPLE_DIR=builder-esm lerna run exec:ci-linux --scope @repo/e2e",
    "test:e2e:mac-universal": "cross-env EXAMPLE_DIR=forge-cjs lerna run exec --scope @repo/e2e"
  },
  "dependencies": {
    "wdio-electron-service": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/node": "^20.14.11",
    "@wdio/cli": "9.0.0-alpha.367",
    "@wdio/globals": "9.0.0-alpha.367",
    "@wdio/local-runner": "9.0.0-alpha.367",
    "@wdio/mocha-framework": "9.0.0-alpha.367",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "global-jsdom": "^24.0.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.18.1",
    "ts-loader": "^9.4.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "webdriverio": "9.0.0-alpha.367"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "build": {
    "asar": true,
    "appId": "com.example-builder-esm.demo",
    "copyright": "goosewobbler",
    "productName": "example-builder-esm",
    "files": [
      "./dist/*"
    ],
    "linux": {
      "executableName": "example-builder-esm",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
